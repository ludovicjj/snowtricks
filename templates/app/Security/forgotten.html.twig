{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/user_form.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-4">

        <div class="row">
            <div class="col-12 col-sm-12 offset-md-3 col-md-6">
                <div class="col-md-12 custom_title">
                    <h4>Mot de passe oubli√©</h4>
                </div>
            </div>
        </div>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        {# Message Flash #}
        <div class="row">
            <div class="col-12 col-sm-12 offset-md-3 col-md-6">
                {% for message in app.session.flashbag.get('success') %}
                    <div class="col-12">
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}
                {% for message in app.session.flashbag.get('warning') %}
                    <div class="col-12">
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        {# login #}
        <div class="row">
            <div class="col-12 col-sm-12 offset-md-3 col-md-6">
                <div class="col-12 form-group">
                    {{ form_row(form.login) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-sm-12 offset-md-3 col-md-6">
                <div class="col-12">
                    <button type="submit" class="btn btn_custom">
                        Valider
                    </button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}