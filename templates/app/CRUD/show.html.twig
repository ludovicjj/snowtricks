{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/show_trick.css') }}">
{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>{{ trick.title }}</h1>
        <h3 class="text-center">
            <span class="badge badge-secondary">{{ trick.category.name }}</span>
        </h3>
    </div>
    <div class="container">

        {# Message Flash de succes #}
        {% for message in app.session.flashBag.get('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row description-container">
            <div class="col-12">
                <h4>Description :</h4>
                <p>{{ trick.description }}</p>
            </div>
        </div>
    </div>

    <section class="container image-container">
        <h4>Images :</h4>
        <div class="row">
            {% for image in trick.images %}
                <div class="col-4">
                    <img src="{{ asset(image.path) }}" alt="{{ image.alt }}" class="rounded">
                </div>
            {% endfor %}
        </div>
    </section>

    <section class="container">
        <h4>Video :</h4>
        <div class="row">
            {% for video in trick.videos %}
                <div class="col-4 video-container">
                    <div style='height :200px ;width :300px'>
                        {{ video.Iframe()|raw }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}