{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/show_trick.css') }}">
{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>{{ trick.title }}</h1>
        <h3 class="text-center">
            <span class="badge badge-secondary">{{ trick.category.name }}</span>
        </h3>
    </div>
    <div class="container">

        {# Message Flash de succes #}
        {% for message in app.session.flashBag.get('success-update-trick') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.session.flashBag.get('success-comment') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row description-container">
            <div class="col-12">
                <h4>Description :</h4>
                <p>{{ trick.description }}</p>
            </div>
        </div>
    </div>

    {# Carousel_image #}
    <section class="container">
        <h4>Images :</h4>
        <div id="carousel_image">
            {% if trick.images|length == 0 %}
                    <p>Il n'y a pas de d'images pour cette figure</p>
            {% else %}
                {% for image in trick.images %}
                    <div class="item">
                        <div class="item__image">
                            <img src="{{ asset(image.path) }}" alt="{{ image.alt }}" class="img-thumbnail">
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </section>

    {# Carousel_video #}
    <section class="container">
        <h4>Video :</h4>
        <div id="carousel_video">
            {% if trick.videos|length == 0 %}
                <p>Il n'y a pas de vidéo pour cette figure</p>
            {% else %}
                {% for video in trick.videos %}
                    <div class="item">
                        <div class="item__image embed-responsive embed-responsive-16by9">
                            {{ video.Iframe()|raw }}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </section>



    {# Form Commentaire #}
    <section class="container mt-4">
        <div class="row">
            <div class="col-12 form-title">
                <h4>Commentaire ({{ trick.NbComments }})</h4>
            </div>
        </div>
        {% if is_granted('ROLE_USER') %}
            <div class="row">
                <div class="col-12">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="form-row">
                        <div class="col-12">
                            {{ form_row(form.message) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-12">
                            <button type="submit" class="btn-secondary btn mt-2">
                                Envoyer
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-danger">
                        Vous devez être connecté pour écrire un commentaire
                    </div>
                </div>
            </div>
        {% endif %}
    </section>

    {# comment #}
    <section class="container mt-4">
        {% for comment in trick.comments %}
            <div class="row mb-4">
                <div class="col-1">
                    <img src="{{ asset(comment.user.avatar.path) }}" alt="{{ comment.user.avatar.alt }}" class="img-fluid">
                </div>
                <div class="col-11">
                    <strong>{{ comment.user.username }}</strong><i><small> écrit à :{{ comment.createdAt|date('H:i') }}, le {{ comment.createdAt|date('d/m/Y') }}</small></i>
                    <p>
                        {{ comment.message }}
                    </p>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}

{% block javascripts %}
    {# Carousel  #}
    <script src="{{ asset('js/carousel.js') }}"></script>
{% endblock %}